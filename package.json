{
  "name": "@flatiron-school/ui",
  "version": "0.0.0-development",
  "private": false,
  "description": "FIS Design System",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flatiron-labs/ui.git"
  },
  "author": "Tom Milewski <tmilewski@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist/* && rollup -c",
    "watch": "rollup -c -w",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:prettier": "prettier --write",
    "lint:prettier:check": "prettier --check",
    "postinstall": "husky install; patch-package",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "storybook": "start-storybook -p 6006 -s src/assets",
    "storybook:build": "build-storybook -s src/assets",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "jsx-a11y",
      "react"
    ],
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "import/export": [
        0,
        {
          "file": "index.ts"
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "!*/*.test.js"
          ]
        }
      ],
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-props-no-spreading": "off",
      "react/no-unescaped-entities": "off",
      "react/require-default-props": "off",
      "import/no-cycle": [
        0,
        {
          "ignoreExternal": true
        }
      ],
      "prefer-const": "off",
      "no-use-before-define": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        },
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ],
          "paths": [
            "src"
          ]
        },
        "typescript": {}
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn eslint",
    "*.{js,jsx,ts,tsx,json,css,md,mdx,yml,yaml}": "yarn prettier --write"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@bahmutov/cy-rollup": "^2.0.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@cypress/react": "^5.3.3",
    "@cypress/webpack-dev-server": "^1.1.3",
    "@etchteam/storybook-addon-status": "^3.0.0",
    "@radix-ui/react-polymorphic": "^0.0.10",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/node-logger": "^6.2.8",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.2.8",
    "@testing-library/cypress": "^7.0.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.1",
    "@testing-library/user-event": "^12.8.3",
    "@types/cypress-axe": "^0.8.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-root-import": "^6.6.0",
    "babel-preset-react-app": "^10.0.0",
    "chromatic": "^5.7.0",
    "commitizen": "^4.2.3",
    "css-mediaquery": "^0.1.2",
    "cypress": "7.1.0",
    "cypress-axe": "^0.12.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.1",
    "husky": "^5.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "patch-package": "^6.4.7",
    "pinst": "^2.1.6",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.3",
    "rollup": "^2.41.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sb": "^6.1.21",
    "semantic-release": "^17.4.2",
    "storybook-addon-jsx": "^7.3.7",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "web-vitals": "^1.1.1"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^0.0.11",
    "@radix-ui/react-switch": "^0.0.11",
    "@reach/auto-id": "^0.13.2",
    "@react-hook/window-size": "^3.0.7",
    "@stitches/react": "^0.1.7",
    "phosphor-react": "^1.2.1",
    "react-hook-form": "^6.15.5",
    "uuid": "^8.3.2",
    "yup": "^0.32.9"
  },
  "resolutions": {
    "@emotion/core": "^10.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
